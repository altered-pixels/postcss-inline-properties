{
	"name": "postcss-inline-properties",
	"description": "Inline Custom Properties",
	"version": "0.1.0",
	"author": "Aaron Pridy <aaron@alteredpixels.io>",
	"contributors": [
		"Jonathan Neal",
		"Maxime Thirouin"
	],
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"CHANGELOG.md",
		"LICENSE.md",
		"README.md",
		"dist",
		"index.d.ts"
	],
	"dependencies": {
		"@csstools/cascade-layer-name-parser": "^2.0.1",
		"@csstools/css-parser-algorithms": "^3.0.1",
		"@csstools/css-tokenizer": "^3.0.1",
		"@csstools/utilities": "^2.0.0",
		"postcss-value-parser": "^4.2.0"
	},
	"peerDependencies": {
		"@babel/core": "^7.24.9",
		"@babel/preset-env": "^7.25.4",
		"@eslint/js": "^9.10.0",
		"@microsoft/api-documenter": "^7.25.12",
		"@microsoft/api-extractor": "^7.47.7",
		"@rollup/plugin-babel": "^6.0.3",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-node-resolve": "^15.2.4",
		"@rollup/plugin-terser": "^0.4.3",
		"@rollup/plugin-typescript": "^12.1.0",
		"@stryker-mutator/core": "^8.5.0",
		"eslint": "^9.10.0",
		"globals": "^15.7.0",
		"knip": "^5.30.4",
		"rollup": "^4.21.2",
		"tslib": "^2.7.0",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.4.0",
		"postcss": "^8.4"
	},
	"devDependencies": {
		"@csstools/postcss-bundler": "*",
		"@csstools/postcss-tape": "*"
	},
	"scripts": {
		"build": "rollup -c ./rollup/default.mjs",
		"docs": "node ./.github/bin/generate-docs/install.mjs && node ./.github/bin/generate-docs/readme.mjs",
		"lint": "node ./.github/bin/format-package-json.mjs",
		"prepublishOnly": "npm run build && npm run test",
		"test": "node --test",
		"test:rewrite-expects": "REWRITE_EXPECTS=true node --test"
	},
	"homepage": "https://github.com/csstools/postcss-plugins/tree/main/plugins/postcss-inline-properties#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/csstools/postcss-plugins.git",
		"directory": "plugins/postcss-inline-properties"
	},
	"bugs": "https://github.com/csstools/postcss-plugins/issues",
	"keywords": [
		"css",
		"csswg",
		"custom",
		"declarations",
		"postcss",
		"postcss-plugin",
		"properties",
		"specification",
		"variables",
		"vars",
		"w3c"
	],
	"csstools": {
		"assumesToProcessBundledCSS": true,
		"cssdbId": "custom-properties",
		"exportName": "postcssCustomProperties",
		"humanReadableName": "PostCSS Custom Properties",
		"specUrl": "https://www.w3.org/TR/css-variables-1/"
	},
	"volta": {
		"node": "22.1.0"
	}
}